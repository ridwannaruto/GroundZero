<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Volma{% endblock %}</title>
        
        <link rel="stylesheet" href="{{asset('bundles/volunteermanagementsystemstyles/CSS/Forms.css')}}" type="text/css" media="screen"> 
        
        <link rel="stylesheet" href="{{asset('bundles/volunteermanagementsystemstyles/CSS/reset.css')}}" type="text/css" media="screen">
        <link rel="stylesheet" href="{{asset('bundles/volunteermanagementsystemstyles/CSS/style.css')}}" type="text/css" media="screen">
        <link rel="stylesheet" href="{{asset('bundles/volunteermanagementsystemstyles/CSS/grid.css')}}" type="text/css" media="screen"> 
        
        <script src="{{asset('bundles/volunteermanagementsystemstyles/JS/jquery-1.6.2.min.js')}}" type="text/javascript"></script>
        <script src="{{asset('bundles/volunteermanagementsystemstyles/JS/jquery.galleriffic.js')}}" type="text/javascript"></script>
        <script src="{{asset('bundles/volunteermanagementsystemstyles/JS/jquery.opacityrollover.js')}}" type="text/javascript"></script>      
	
    {% block stylesheets %}

    {% endblock %}
    {% block javascripts %}{% endblock %}
      
    </head>
    <body>
        <!--==============================header=================================-->
    <header>
    	
        <div class="row-2">
        	<div class="main">
            	<div class="container_12">
                	<div class="grid_9"><br>
                    	<h2 align="center"><img src="{{asset('bundles/volunteermanagementsystemstyles/images/volma.png')}}" width="245" height="100"></h2>
                    	<h2 align="center"><span class="price">Volunteer Management System</span></h2>
                    </div>
                	<div class="clear"></div>
                </div>
            </div>
        </div> 
        
        <div class="row-1">
       	  <div class="main">
            	<div class="container_12" >
                	{% block menu%}
                	<div class="grid_12" >
                            
                    	<nav>
                            <ul class="menu">
                           
                                <li><a href="home?id={{id}}"{% block selecthome%}{%endblock%}>Home</a></li>
                                <li><a href="profile?id={{id}} "{% block selectprofile%}{%endblock%}>Profile</a></li>
                                       <li><a href="news?id={{id}}" {% block selectnews%}{%endblock%}>News Feed</a></li>
                                <li><a href="projects?id={{id}}"{% block selectprojects%}{%endblock%}>Projects</a></li>
                             
                              <li><a href="contact?id={{id}}"{% block selectcontacts%}{%endblock%}>Contacts</a></li>
                             <li><a href="logout">Log Out</a></li>
                           
                            </ul>
                                
                        </nav>
                    </div>
                       {%endblock%}
                </div>
             
            </div>
        </div>   	
    </header>    
<!-- content -->
    <section id="content">
        <div class="bg-top">
        	<div class="bg-top-2">
                <div class="bg">
                    <div class="bg-top-shadow">
                        <div class="main">
                            <div class="gallery p3">
                              <div class="inner">
                              
                                <p>
                                    {% block body %}{% endblock %}
                                        
                                    </p>
                                
                                
                                <p align="center">Developed by<br>
                          <img src="{{asset('bundles/volunteermanagementsystemstyles/images/Footer.png')}}" width="190" height="67"></p></div></div>
                            <div class="container_12"></div>
                        </div>
                    </div>
                </div>
            </div>	
        </div>
       
    </section>
        
    </body>
</html>
